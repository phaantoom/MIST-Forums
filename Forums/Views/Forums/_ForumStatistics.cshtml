@model Forums.ViewModel.ForumStatisticsObj
@{
}
<div class="card">
    <div class="card-body">
        <table class="table table-sm">
            <tr>
                <td></td>
                <td>No comments</td>
                <td>No Replies</td>
                <td>No users</td>
            </tr>
            <tr>
                <td>Today</td>
                <td>@Model.Today.NoComment</td>
                <td>@Model.Today.NoReplies</td>
                <td>@Model.Today.NoUser</td>
            </tr>
            <tr>
                <td>Yesterday</td>
                <td>@Model.Yesterday.NoComment</td>
                <td>@Model.Yesterday.NoReplies</td>
                <td>@Model.Yesterday.NoUser</td>
            </tr>
            <tr>
                <td>Last 3 months</td>
                <td>@Model.LastThreeMonths.NoComment</td>
                <td>@Model.LastThreeMonths.NoReplies</td>
                <td>@Model.LastThreeMonths.NoUser</td>
            </tr>
            <tfoot>
                <tr>
                    <td>Total</td>
                    <td>@Model.Total.NoComment</td>
                    <td>@Model.Total.NoReplies</td>
                    <td>@Model.Total.NoUser</td>
                </tr>
            </tfoot>
        </table>
    </div>
</div>